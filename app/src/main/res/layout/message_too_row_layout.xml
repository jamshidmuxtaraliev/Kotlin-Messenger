<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/too_profile_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#FF606060"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/new_message_too_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="12dp"
        android:text="asd ffffffff ffff asd ffffffff ffff asd ffffffff ffff asd ffffffff ffff asd ffffffff ffff"
        android:maxWidth="260dp"
        android:background="@drawable/message_from_row"
        android:padding="12dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/too_profile_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>